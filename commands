podman pull --tls-verify=false docker.io/localstack/localstack



PODMAN_ARGS="--tls-verify=false" podman-compose up -d

podman-compose down
podman container stop localstack || true
podman container rm localstack || true


mkdir -p ~/localstack-data

version: "3.8"
services:
  localstack:
    container_name: localstack
    image: localstack/localstack
    ports:
      - "4566:4566"
      - "4571:4571"
    environment:
      - SERVICES=s3,dynamodb,lambda
      - DEBUG=1
      - DATA_DIR=/tmp/localstack/data
    volumes:
      - ~/localstack-data:/tmp/localstack


PODMAN_ARGS="--tls-verify=false" podman-compose up -d

podman logs localstack

---

podman-compose down
podman container stop localstack || true
podman container rm localstack || true
podman volume rm localstack_tmp || true

version: "3.8"
services:
  localstack:
    container_name: localstack
    image: localstack/localstack
    ports:
      - "4566:4566"
      - "4571:4571"
    environment:
      - SERVICES=s3,dynamodb,lambda
      - DEBUG=1
      - DATA_DIR=/tmp/localstack/data
      - DOCKER_HOST=unix:///var/run/docker.sock
      - LEGACY_DIRECTORIES=1
    volumes:
      - localstack_tmp:/tmp/localstack
volumes:
  localstack_tmp:

PODMAN_ARGS="--tls-verify=false" podman-compose up -d


TMPDIR=~/localstack-tmp PODMAN_ARGS="--tls-verify=false" podman-compose up -d


---
version: "3.8"
services:
  localstack:
    container_name: localstack
    image: localstack/localstack
    ports:
      - "4566:4566"
      - "4571:4571"
    environment:
      - SERVICES=s3,dynamodb,lambda
      - DEBUG=1
      - SKIP_SSL_CERT_DOWNLOAD=1  # Skip SSL cert download
      - DISABLE_CORS_CHECKS=1
      - LAMBDA_EXECUTOR=local
      - DOCKER_HOST=unix:///var/run/podman.sock  # Use podman socket instead
      - GATEWAY_LISTEN=0.0.0.0:4566
      - USE_SSL=0  # Disable SSL
      - DISABLE_EVENTS=1
    volumes:
      - localstack_tmp:/tmp/localstack
volumes:
  localstack_tmp: