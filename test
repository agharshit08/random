# EditorConfig for Google Java Style
# Import this file directly into your IDE (e.g., IntelliJ, Eclipse) or use in your build tools

root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# Use spaces instead of tabs (Google Java Style uses 2 spaces per indentation level)
indent_style = space
indent_size = 2

# Maximum line length
max_line_length = 100

# Trim trailing whitespace in all files
trim_trailing_whitespace = true

[*.java]
# Java-specific configuration for braces and indentation
# Align braces with the left side and indent inner content by one level
brace_style = 1tbs
indent_size = 2
tab_width = 2

# Keep opening braces on the same line for blocks
insert_braces_same_line = true

# Use standard Google Java Style formatting rules
ij_java_blank_lines_after_imports = 1
ij_java_continuation_indent_size = 2
ij_java_method_brace_style = end_of_line
ij_java_statement_continuation_indent = true

# Insert braces for 'if', 'for', 'while' statements even when optional
insert_optional_braces = true
